<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" value="{{novedad.titulo}}" class="form-control" placeholder="Titulo"
                        name="titulo">
                </div>
                <div class="form-group" style="margin-top:10px">
                    <p>
                        <label>Im√°gen: <input type="file" id="imagen" name="imagen"></label>
                    </p>
                    <p>
                        <label>
                            <input type="checkbox" id="img_delete" name="img_delete" value="1">Eliminar imagen actual?</label>
                            <input type="text" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <textarea placeholder="Subtitulo" class="form-control"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="input-group-lg" style="margin-top:10px">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top:20px">Modificar</button>
            </form>
            {{#if message}}
            {{message}}
            {{/if}}
        </div>
    </div>
</div>